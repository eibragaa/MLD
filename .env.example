# Production Environment Variables
NODE_ENV=production
PORT=3001

# Node.js Configuration
NODE_VERSION=18
NODE_OPTIONS=--openssl-legacy-provider

# Build Optimization
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true
CI=false

# For Netlify Functions (if using serverless backend)
FUNCTIONS_PORT=9999

# API Base URL for production
REACT_APP_API_BASE_URL=https://your-app-name.netlify.app/.netlify/functions