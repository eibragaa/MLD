{
  "name": "mediadownloader-clone",
  "version": "1.0.0",
  "description": "A simple, fast, and reliable media downloader for social media platforms",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && set NODE_OPTIONS=--openssl-legacy-provider && npm start",
    "build": "cd client && npm run build",
    "build:all": "npm run install:all && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "cd client && npm test",
    "deploy:netlify": "npm run build:all && netlify deploy --prod --dir=client/build"
  },
  "keywords": [
    "media",
    "downloader",
    "youtube",
    "instagram",
    "tiktok",
    "facebook",
    "linkedin",
    "twitter",
    "x"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "craco-alias": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.543.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
